server {
    listen 80;
    server_name _;

    location /app {
        proxy_pass ${BACKEND};
    }

    location ~ /app/ui/images {
        proxy_pass ${BACKEND};
    }

    location ~ /app/ui {
        proxy_pass ${BACKEND};
    }

    location / {
        client_max_body_size 100M;
        proxy_buffering off;
        proxy_read_timeout 3000;
        root /usr/share/nginx/html/anfisa/;
        try_files $uri $uri/ /index.html;
    }
}